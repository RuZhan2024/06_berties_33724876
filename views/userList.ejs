<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>All Users</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <link rel="stylesheet" href="/main.css" />
</head>
<body>
  <%# Renders a table of all users. Expects 'users'. %>

  <header class="container">
    <h1>All Users</h1>
    <p><a href="/">‚Üê Back home</a></p>
  </header>

  <main class="container">
    <% if (!users || users.length === 0) { %>
      <section class="card">
        <p class="muted">No users found.</p>
      </section>
    <% } else { %>
      <section class="card">
        <table class="table">
          <caption class="muted">List of all registered users</caption>
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Username</th>
              <th scope="col">Name</th>
              <th scope="col">Email</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach((u) => { %>
              <tr>
                <!-- If your SELECT includes 'id', this will show the real DB id -->
                <td><%= u.id %></td>
                <td><%= u.username %></td>
                <td><%= u.first_name %> <%= u.last_name %></td>
                <td><%= u.email %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </section>
    <% } %>
  </main>
</body>
</html>
